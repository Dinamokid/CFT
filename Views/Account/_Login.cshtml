@model CFT.ViewModels.Account.LoginViewModel

<div class="validation" asp-validation-summary="ModelOnly"></div>
<p class="h4 mb-4">Вход</p>

<div class="form-group">
    <input type="text" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="Логин" required asp-for="Login">
    <span asp-validation-for="Login"></span>
</div>
<div class="form-group">
    <input type="password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Пароль" required asp-for="Password">
    <span asp-validation-for="Password"></span>
</div>

<button class="btn btn-info btn-block my-4" type="submit">Войти</button>
<p>
    Нет аккаунта?
    <a asp-action="Register" asp-controller="Account">Регистрация</a>
</p>
